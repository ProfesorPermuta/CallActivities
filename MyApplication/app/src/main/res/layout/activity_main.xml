<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnActivitySaludoDeprecated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saludo Deprecated" />

        <Button
            android:id="@+id/btnActivitySaludoContract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saludo Contract" />

        <Button
            android:id="@+id/btnActivityCamaraDeprecated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camara Deprecated" />

        <Button
            android:id="@+id/btnActivityCamaraContract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camara Contract" />

        <TextView
            android:id="@+id/tvLogger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>